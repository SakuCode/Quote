<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.qotdController">
   <children>
      <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="400.0" spacing="10.0" style="-fx-background-color: darkgray;">
         <children>
            <Label alignment="TOP_CENTER" text="Quote:" textAlignment="CENTER" textFill="WHITE">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
               <font>
                  <Font name="HelvLight Regular" size="20.0" />
               </font>
            </Label>
            <Label fx:id="Quote" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="500.0" textAlignment="CENTER" textFill="WHITE" wrapText="true">
               <font>
                  <Font name="HelvLight Regular" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <Label text="Author:" textFill="WHITE">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="HelvLight Regular" size="20.0" />
               </font>
            </Label>
            <Label fx:id="Author">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Button fx:id="BackBtn" alignment="CENTER" mnemonicParsing="false" onAction="#BackBtnOnAction" style="-fx-background-color: lightgray;" text="Back">
               <VBox.margin>
                  <Insets bottom="20.0" top="20.0" />
               </VBox.margin>
               <font>
                  <Font name="HelvLight Regular" size="16.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
